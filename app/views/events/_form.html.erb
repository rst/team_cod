<%= form_for(@event) do |f| %>
 <div class="container">

  <div class="col-md-8">
   <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
   </div>
   <div class="form-group">
    <%= f.label :expires_in_days %>
    <%= f.text_field :expires_in_days, class: 'form-control' %>
   </div>
   <div class="form-group">
    <%= f.label :url, "Web address (URL)" %>
    <%= f.text_field :url, class: 'form-control' %>
   </div>
   <div class="form-group">
    <%= f.label :address, "Street address" %>
    <%= f.text_area :address, rows: 2, class: 'form-control' %>
   </div>
   <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10, class: 'form-control' %>
   </div>
  </div>

  <div class="col-md-2 col-md-offset-1">
    <% Topic.all.each do |topic| %>
      <%= topic_list_item_with_checkbox(topic,
                                        @selected_topics.include?(topic)) %>
    <% end %>
  </div>
 </div>

 <div class="form-group">
  <%= f.submit %>
 </div>

<% end %>
